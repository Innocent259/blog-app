<div class="home">
  <h1 class="text-base font-bold">Create a New Comment</h1>

<%= form_with model: @comment, url: user_post_comments_path do |f| %>
  <div class="comments">
    <%= f.label :title, "Comment" %>
    <span class="text-area"><%= f.text_area :text %></span>
  </div>

   <button class="button-content">
    <%= f.submit 'Create Comment' %>
  </button>
<% end %>
</div>

