<div class="home">
  <h1>Create a New Comment</h1>

<%= form_with model: @comment, url: user_post_comments_path do |form| %>
  <div class="comments">
    <%= form.label :Comment %>
    <span class="text-area"><%= form.text_area :text %></span>
  </div>
   <button class="button-content">
    <%= form.submit 'Create Comment' %>
  </button>
<% end %>
</div>

