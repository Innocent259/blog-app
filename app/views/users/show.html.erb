<div class="home">
<%= render partial: "user", users: @users%>
<div class="bio-container">
    <h2 class="bio">Bio</h2>
    <p><%= @users[0].bio %></p>
</div>

<% @posts.each do |post| %>
<div>
    <div>
        <a href="<%= user_post_path(post.author_id,post.id) %>">
            <h2><%= post.title %></h2>
            <p><%= post.text %><p>
            <div>
                <span>Comments: <%= post.comments.count %></span>
                <span>Likes: <%= post.likes.count %></span>
            </div>
        </a>
    </div>
</div>
<% end %>
<% unless @users[0].posts.length <=3 %>
<button>
    <a href="<%= user_posts_path(@users[0])%>">See all posts</a>
</button>
<%end %>
</div>